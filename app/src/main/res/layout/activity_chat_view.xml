<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatView"
    tools:ignore="MissingDefaultResource">

    <TextView

        android:id="@+id/chats"
        android:layout_width="345dp"
        android:layout_height="47dp"
        android:background="@color/black"
        android:padding="10dp"
        android:text="Chats"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Chats_recycler"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/backBtnchview"
        android:layout_width="32dp"
        android:layout_height="33dp"


        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/abc_vector_test"
        app:layout_constraintBottom_toTopOf="@+id/Chats_recycler"
        app:layout_constraintEnd_toStartOf="@+id/chats"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Chats_recycler"
        android:layout_width="300dp"
        android:layout_height="634dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chats" />


</androidx.constraintlayout.widget.ConstraintLayout>